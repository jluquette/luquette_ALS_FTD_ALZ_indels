# vim: syntax=python

rule run_snpeff_helper:
    input:
        vcf="vcfs/{qualtype}/{group}.vcf"
    output:
        vcf="snpeff/{qualtype}/{group}.vcf"
    log:
        "snpeff/{qualtype}/{group}.run_snpeff.log"
    resources:
        mem_mb=8000
    shell:
        """
        snakemake/scripts/run_snpeff.sh \
            {input.vcf} {output.vcf} > {log} 2>&1
        """
